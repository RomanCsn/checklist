<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Checklist Manager{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>✓</text></svg>">
        {% block stylesheets %}
            {{ importmap('app') }}
           <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% endblock %}

        {% block javascripts %}
            {{ importmap('app', {importmap: 'app'}) }}
        {% endblock %}
    </head>
    <body class="bg-gray-50 min-h-screen flex flex-col">
        <!-- Header -->
        <header class="bg-white shadow-sm">
            <div class="container mx-auto px-4 py-4">
                <nav class="flex justify-between items-center">
                    <a href="{{ path('app_home') }}" class="text-xl font-bold text-blue-600">Checklist Manager</a>
                    
                    {% if app.user %}
                        <div class="flex space-x-6">
                            <a href="{{ path('app_checklist_template_index') }}" class="text-gray-600 hover:text-blue-600">Modèles</a>
                            <a href="{{ path('app_project_checklist_index') }}" class="text-gray-600 hover:text-blue-600">Projets</a>
                        </div>
                        <div class="flex items-center">
                            <span class="text-sm text-gray-700 mr-4">{{ app.user.email }}</span>
                            <a href="{{ path('app_logout') }}" class="px-3 py-2 rounded-md text-sm font-medium text-white bg-red-600 hover:bg-red-700">
                                Déconnexion
                            </a>
                        </div>
                    {% else %}
                        <div class="flex space-x-4">
                            <a href="{{ path('app_login') }}" class="px-3 py-2 rounded-md text-sm font-medium text-white bg-blue-600 hover:bg-blue-700">
                                Connexion
                            </a>
                            <a href="{{ path('app_register') }}" class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 bg-gray-200 hover:bg-gray-300">
                                Inscription
                            </a>
                        </div>
                    {% endif %}
                </nav>
            </div>
        </header>

        <!-- Main Content -->
        <main class="flex-grow">
            {% block body %}{% endblock %}
        </main>

        <!-- Footer -->
        <footer class="bg-white border-t mt-12">
            <div class="container mx-auto px-4 py-6">
                <p class="text-center text-gray-600">© {{ "now"|date("Y") }} Checklist Manager</p>
            </div>
        </footer>
    </body>
</html>
