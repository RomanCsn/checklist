<div class="bg-white shadow-sm rounded-lg p-6 max-w-lg mx-auto">
    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
        <div>
            {{ form_label(form.label, 'Libellé', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.label, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
            {{ form_errors(form.label, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
        </div>
        
        <div>
            {{ form_label(form.isChecked, 'Complété', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.isChecked, {'attr': {'class': 'mt-1 h-5 w-5 text-blue-600 rounded border-gray-300 focus:ring-blue-500'}}) }}
            {{ form_errors(form.isChecked, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
        </div>
        
        <div>
            {{ form_label(form.position, 'Position', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.position, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
            {{ form_errors(form.position, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
        </div>
        
        <div>
            {{ form_label(form.relation, 'Checklist associée', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
